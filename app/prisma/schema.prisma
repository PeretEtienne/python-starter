datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

model User {
  id              Int     @id @default(autoincrement())
  email           String  @unique
  first_name      String
  last_name       String
  hashed_password String
  refresh_token   String?
  reset_token     String?
  is_active       Boolean @default(true)
}
